package tictactoe;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        TicTacToe ttt = new TicTacToe();
        Scanner scan = new Scanner(System.in);

        //ttt.createBoard();                // Creates a default size tic tac toe board (3x3)

        System.out.println("Please choose the size of board you would like to play");
        int boardSize = scan.nextInt();
        //ttt.createBoard(boardSize);       // Alternative method to create a custom size board
        
        System.out.println("Please designate how many should be in a row to win");
        int inARowToWin = scan.nextInt();
        
        ttt.createBoard(boardSize, inARowToWin);    // Method to create custom sized board with customized winning connections

        ttt.play();
    }
}
